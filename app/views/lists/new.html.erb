<div class="d-flex justify-content-between p-5 align-items-center">
  <h2>New Movie List</h2>
  <%= link_to 'Back to My Lists', lists_path, class: "btn btn-sm btn-outline-primary" %>
</div>
<div class="p-5">
  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.button :submit, class: "btn btn-sm btn-outline-success"  %>
  <% end %>
</div>
