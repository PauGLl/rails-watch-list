<div class="banner">
  <h2>Save any kind of movies</h2>
</div>
<div class="d-flex justify-content-between px-5 py-3 align-items-center">
  <h2>My Lists (<%= @lists.count %>)</h2>
  <%= link_to 'Create a list', new_list_path, class: "btn btn-sm btn-outline-success" %>
</div>
<div class="grid-container p-5">
  <% @lists.each do |list| %>
    <%= link_to list.name, list_path(list), class: "d-flex grid-item justify-content-around p-3 grid-item-index bg-image", style: "background-image: url(#{list.bgimage}), linear-gradient(rgba(0,0,0,1), rgba(0,0,0,.5)); background-size: cover; background-position: center; color: white; background-blend-mode: multiply" %>
  <% end %>
</div>
