<div class="banner">
  <h2>Save any kind of movies</h2>
</div>
<div class="d-flex justify-content-between p-5 align-items-center">
  <h2>My Lists</h2>
  <%= link_to 'Create a list', new_list_path, class: "btn btn-sm btn-outline-success" %>
</div>
<div class="grid-container p-5">
  <% @lists.each do |list| %>
    <%# <div class="d-flex grid-item justify-content-around p-3"> %>
    <%= link_to list.name, list_path(list), class: "d-flex grid-item justify-content-around p-3" %>
  <% end %>
</div>
